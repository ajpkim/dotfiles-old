### i3-gaps configs

# Disable window titlebars (necessary for gaps and can be nonzero)
for_window [class=".*"] border pixel 2

# Only enable outer gaps when there is exactly one container.
smart_gaps inverse_outer
# Smart borders will draw borders on windows only if there is more than one window in a workspace
smart_borders on
# Hide edge borders only if there is one window with no gaps
# hide_edge_borders smart_no_gaps

set $innergap 8
set $outergap 2
set $gapincr 5

gaps inner $innergap
gaps outer $outergap 

bindsym $mod+n		gaps inner current plus $gapincr
bindsym $mod+Shift+n	gaps inner current minus $gapincr

# Mode for toggling gaps on/off
set $mode_gaps Toggle gaps: (1) on (2) off
bindsym $mod+Shift+g mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set $innergap, gaps outer all set $outergap
    bindsym 2 mode "default", gaps inner all set 1, gaps outer all set 1
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

