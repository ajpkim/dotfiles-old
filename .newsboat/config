# https://newsboat.org/releases/2.21/docs/newsboat.html

# General
browser					"firefox"
save-path				"~/reading/newsboat-saves"

# ----- Key bindings -----
bind-key					u	toggle-article-read
# ----- Feeds -----
prepopulate-query-feeds		yes
refresh-on-startup															yes
max-items					500
delete-read-articles-on-quit	yes
# ----- Display -----
show-read-articles			yes  # read articles deleted on quit.
show-read-feeds				yes
text-width					100
# 256 color options: https://jonasjacek.github.io/colors/
color background			white	black
color info					yellow	black
color article 				        white	black
color listnormal 				color42	black # foreground for feeds. 14 is nice aqua alt.
color listnormal_unread 		color123 black  # 85 is nice seagreen alternative
color listfocus_unread 		white 	blue	bold
color listfocus				white 	blue	bold
# Customize the article metadata appearance.
highlight article				"^Feed:.	*"	color123	black
highlight article  				"^Title:.*"	color42		black
highlight article  				"^Author:.*" 	color42		black
highlight article  				"^Date:.*" 	color135	black
highlight article  				"^Link:.*" 	color39 		black
